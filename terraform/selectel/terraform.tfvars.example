# Selectel Account Credentials
# Find these in: https://my.selectel.ru/profile/apikeys
selectel_domain   = "123456"           # Your account ID
selectel_username = "your-username"
selectel_password = "your-password"

# Password for the OpenStack service user (create your own)
openstack_password = "SecurePassword123!"

# Path to SSH public key (will be uploaded to Selectel)
ssh_public_key_path = "~/.ssh/id_ed25519.pub"

# Environment name (used in resource naming)
environment_name = "fast-ssd-96gb"

# Region and availability zone
region            = "ru-7"
availability_zone = "ru-7b"

# VM Configuration
cpu_count    = 12
ram_gb       = 96
disk_size_gb = 200
disk_type    = "fast"  # Options: fast, universal, basic, basic_hdd

# MinIO Cluster (Optional)
# Uncomment to deploy a MinIO cluster with erasure coding
# minio_enabled         = true
# minio_root_password   = "SecureMinioPassword123!"
# minio_node_count      = 2    # Number of nodes (2, 3, 4, 6)
# minio_node_cpu        = 4    # vCPU per node
# minio_node_ram_gb     = 16   # RAM per node
# minio_drives_per_node = 3    # Drives per node (2, 3, 4)
# minio_drive_size_gb   = 200  # Size per drive
# minio_drive_type      = "fast"  # fast or universal
